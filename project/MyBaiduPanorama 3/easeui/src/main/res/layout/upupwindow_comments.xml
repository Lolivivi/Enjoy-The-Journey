<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/liner_comment_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@drawable/comments_border_style"
        android:layout_alignParentTop="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共"
            android:textSize="16sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_popupwindow_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:textSize="16sp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="条评论"
            android:textSize="16sp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_popupwindow_colse"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/close"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"/>
    <ExpandableListView
        android:id="@+id/el_popupwindow_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/liner_comment_title"
        android:background="@color/white"
        android:layout_marginBottom="40dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="30dp"
            android:paddingLeft="20dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/write_comment_style">
            <TextView
                android:id="@+id/tv_popupwindow_comment_write"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="请输入评论。。。"
                android:background="@null"
                android:textSize="12dp"
                android:gravity="center"/>
        </LinearLayout>
        <Button
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="35dp"
            android:text="发送"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:backgroundTint="#3a8fea"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</RelativeLayout>